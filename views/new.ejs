<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name of campground">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image source url">
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Camp Ground">
                </div>
            </form>
            <a href="/campgrounds">Go back!</a>
        </div>
    </div>
</div>

<% include partials/footer %>